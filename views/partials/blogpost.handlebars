<div class="card">
      <div class="card-header">
        {{post.title}}
      </div>
      <div class="card-body">
        <blockquote class="blockquote mb-0">
          <p>{{post.content}}</p>
          <footer class="blockquote-footer">{{post.name}} <cite title="Source Title">-Posted on:{{post.date}}</cite></footer>
          <button type="button" class="btn btn-success">Comment</button>
        </blockquote>
      </div>
    </div>